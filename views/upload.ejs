        data() {
          return {
            percent: 0,
            file: null,
            mode: "pick" // mode : pick . uploading . done
          };
        },

        computed: {
          perWidth() {
            return this.percent + "%";
          }
        },

        methods: {
          pickFile() {
            document.getElementById("upload-file").click();
